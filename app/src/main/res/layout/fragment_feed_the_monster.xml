<?xml version="1.0" encoding="utf-8"?>
<!--
 Game UI for Feed the Monster.
 Includes background image, header with score and round,
 target label, round progress, monster reactions, cookie grid,
 konfetti overlay, and footer controls.
-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Full-screen background -->
    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/monster_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Top-right Home icon -->
    <ImageButton
        android:id="@+id/btnHomeIcon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/transparent"
        android:contentDescription="Home"
        android:src="@drawable/home_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Top-right Close icon -->
    <ImageButton
        android:id="@+id/btnCloseIcon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/transparent"
        android:contentDescription="Close"
        android:src="@drawable/close_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnHomeIcon"/>

    <!-- Header with score and round -->
    <LinearLayout
        android:id="@+id/headerRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#80000000"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/tvScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score: 0"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="16dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvRound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Round: 1"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correct: 0  Incorrect: 0  Played: 0  Stars: 0"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:gravity="center"
            android:paddingTop="4dp"/>
    </LinearLayout>

    <!-- Target label -->
    <TextView
        android:id="@+id/tvTarget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feed me: 5"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:background="#80000000"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/headerRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Per-round progress -->
    <ProgressBar
        android:id="@+id/progressRound"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:max="10"
        android:progress="0"
        android:progressTint="@android:color/holo_green_light"
        android:background="#33FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/tvTarget"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="8dp"/>

    <!-- Monster image that reacts -->
    <ImageView
        android:id="@+id/imgMonster"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:contentDescription="Monster"
        android:src="@drawable/monster_neutral"
        app:layout_constraintTop_toBottomOf="@id/progressRound"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Star flash on success -->
    <ImageView
        android:id="@+id/imgStar"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/monster_star"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/imgMonster"
        app:layout_constraintEnd_toEndOf="@id/imgMonster"/>

    <!-- Cookie grid populated at runtime -->
    <GridLayout
        android:id="@+id/gridCookies"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:columnCount="5"
        android:rowCount="2"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/imgMonster"
        app:layout_constraintBottom_toTopOf="@id/footerRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Konfetti overlay -->
    <nl.dionsegijn.konfetti.xml.KonfettiView
        android:id="@+id/konfettiView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Footer controls -->
    <LinearLayout
        android:id="@+id/footerRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#80000000"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"/>

        <Space android:layout_width="16dp" android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
